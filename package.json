{
  "name": "arkadia-config-editor",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/Delwing/arkadia-config-editor",
  "author": "Dargoth",
  "devDependencies": {
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "@json-editor/json-editor": "^2.5.1",
    "electron-find": "^1.0.6",
    "electron-in-page-search": "^1.3.2",
    "electron-reload": "^1.5.0",
    "highlightjs": "^9.16.2",
    "showdown": "^1.9.1"
  },
  "build": {
    "appId": "arkadia-cfg-editor",
    "productName": "arkadia-cfg-editor",
    "artifactName": "${productName}.${ext}",
    "linux": {
      "target" : "AppImage"
    },
    "win": {
      "target" : "portable"
    },
    "mac": {
      "target" : "dmg"
    }
  }
}
